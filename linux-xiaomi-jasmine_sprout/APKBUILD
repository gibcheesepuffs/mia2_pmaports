pkgname=linux-xiaomi-jasmine_sprout
pkgver=4.4.226
pkgrel=0
pkgdesc="Xiaomi Mi A2 kernel fork"
arch="aarch64"
_carch="arm64"
_flavor="xiaomi-jasmine_sprout"
url="https://kernel.org"
license="GPL-2.0-only"
options="!strip !check !tracedeps pmb:cross-native"
makedepends="bash bc bison devicepkg-dev flex openssl-dev perl"


# Source
_user="xiaomi-sdm660"
_repository="android_kernel_xiaomi_sdm660"
_commit="dd155506c8c44f5709986418c2eae66ae5720588"
_config="config-$_flavor.$arch"
source="
	$pkgname-$_commit.tar.gz::https://github.com/$_user/$_repository/archive/$_commit.tar.gz
	$_config
	remove_bootloader_cmdline_opts.patch
	disable_skip_initramfs.patch
"
builddir="$srcdir/$_repository-$_commit"
_outdir="out"

prepare() {
	default_prepare
	REPLACE_GCCH=0
	. downstreamkernel_prepare
}

prepare() {
	default_prepare
	REPLACE_GCCH=0
	. downstreamkernel_prepare
}

build() {
	unset LDFLAGS
	make O="$_outdir" ARCH="$_carch" CC="${CC:-gcc}" \
		KBUILD_BUILD_VERSION="$((pkgrel + 1 ))-postmarketOS"
}

package() {
	downstreamkernel_package "$builddir" "$pkgdir" "$_carch" "$_flavor" "$_outdir"
	# Modules
	unset LDFLAGS
	make O="$_outdir" ARCH="$_carch" CC="${CC:-gcc}" \
		KBUILD_BUILD_VERSION="$((pkgrel + 1 ))-postmarketOS" \
		INSTALL_MOD_PATH="$pkgdir" modules_install
}

